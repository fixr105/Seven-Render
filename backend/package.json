{
  "name": "seven-fincorp-backend",
  "version": "1.0.0",
  "description": "Seven Fincorp Loan Management & Credit Dashboard Backend API",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc || true",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:idMatcher": "jest --testPathPattern=idMatcher",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:rbac": "tsx src/middleware/__tests__/rbac.test.runner.ts",
    "test:module0": "tsx src/module0-verification.ts",
    "test:module1": "tsx src/module1-verification.ts",
    "test:duplicate": "tsx src/services/validation/__tests__/duplicateDetection.test.runner.ts",
    "test:statemachine": "tsx src/services/statusTracking/__tests__/statusStateMachine.test.runner.ts",
    "test:login": "tsx src/controllers/__tests__/login.test.runner.ts",
    "create:users": "node scripts/create-production-users.js",
    "create:nbfc": "node scripts/create-nbfc-partners.js",
    "generate:mapping": "node scripts/generate-loan-product-field-mapping.js",
    "create:products": "node scripts/create-loan-products.js",
    "create:applications": "node scripts/create-test-loan-applications.js",
    "manage:status": "node scripts/manage-loan-application-status.js",
    "auto:commission": "node scripts/auto-create-commission-ledger.js",
    "auto:commission:nbfc": "node scripts/auto-create-commission-from-nbfc-payout.js",
    "daily:summary": "node scripts/generate-daily-summary-notification.js",
    "sync:asana": "node scripts/sync-loans-to-asana.js",
    "pre-deploy": "tsx scripts/pre-deployment-check.ts",
    "test:webhook": "tsx scripts/test-validate-webhook.ts",
    "test:fixes": "tsx scripts/test-functionality-fixes.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "dependencies": {
    "@types/node-cron": "^3.0.11",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^4.2.1",
    "node-fetch": "^3.3.2",
    "sanitize-html": "^2.17.0",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xlsx": "^0.18.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.6",
    "@types/node-fetch": "^2.6.11",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "eslint": "^9.39.2",
    "jest": "^29.7.0",
    "prettier": "^3.7.4",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.0",
    "typescript": "^5.5.3"
  }
}
