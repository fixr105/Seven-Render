{
  "name": "seven-fincorp-backend",
  "version": "1.0.0",
  "description": "Seven Fincorp Loan Management & Credit Dashboard Backend API",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:rbac": "tsx src/middleware/__tests__/rbac.test.runner.ts",
    "test:module0": "tsx src/module0-verification.ts",
    "test:module1": "tsx src/module1-verification.ts",
    "test:duplicate": "tsx src/services/validation/__tests__/duplicateDetection.test.runner.ts",
    "test:statemachine": "tsx src/services/statusTracking/__tests__/statusStateMachine.test.runner.ts"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "@types/node-fetch": "^2.6.11",
    "@types/multer": "^1.4.11",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.0",
    "typescript": "^5.5.3"
  }
}
