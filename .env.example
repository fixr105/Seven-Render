# Environment Variables Example
# Copy this file to .env and fill in your actual values

# API Configuration
# Unset VITE_API_BASE_URL to use Vite proxy: frontend /api -> backend :3001 (same-origin, no CORS).
# Set to backend URL (e.g. http://localhost:3001) when frontend calls API directly; then CORS_ORIGIN must include frontend origin (e.g. http://localhost:3000).
VITE_API_BASE_URL=
# N8N_BASE_URL is required. User-account URL = {N8N_BASE_URL}/webhook/useraccount (used for login).
N8N_BASE_URL=https://fixrrahul.app.n8n.cloud
# Product Documents (optional - override if n8n uses different path, e.g. product-documents)
# N8N_GET_PRODUCT_DOCUMENTS_URL=${N8N_BASE_URL}/webhook/productdocument
# N8N_POST_PRODUCT_DOCUMENTS_URL=${N8N_BASE_URL}/webhook/productdocument
# N8N_PATCH_PRODUCT_DOCUMENTS_URL=${N8N_BASE_URL}/webhook/productdocument
# N8N_DELETE_PRODUCT_DOCUMENTS_URL=${N8N_BASE_URL}/webhook/productdocument
# Loan Products (optional - override if n8n uses different path)
# N8N_PATCH_LOAN_PRODUCTS_URL=https://fixrrahul.app.n8n.cloud/webhook/loanproducts
# N8N_DELETE_LOAN_PRODUCTS_URL=https://fixrrahul.app.n8n.cloud/webhook/loanproducts
PORT=3001

# AI Summary (default for credit team: big-brain-bro; same POST body as /webhook/loanapplications)
N8N_BIG_BRAIN_BRO_URL=https://fixrrahul.app.n8n.cloud/webhook/big-brain-bro

# E2E Test Credentials
# Used by Playwright E2E and backend tests. For tests always use: Sagar@gmail.com / pass@123
E2E_CLIENT_USERNAME=Sagar@gmail.com
E2E_CLIENT_PASSWORD=pass@123
E2E_KAM_USERNAME=Sagar@gmail.com
E2E_KAM_PASSWORD=pass@123
E2E_CREDIT_USERNAME=Sagar@gmail.com
E2E_CREDIT_PASSWORD=pass@123
E2E_NBFC_USERNAME=Sagar@gmail.com
E2E_NBFC_PASSWORD=pass@123

# Backend Configuration
NODE_ENV=development
# Comma-separated allowed origins. Must include frontend origin when using explicit VITE_API_BASE_URL.
# Vite dev server runs on :3000; use http://localhost:3000 (not :8000).
CORS_ORIGIN=http://localhost:3000

# Auth (required in production). Generate: openssl rand -base64 32
JWT_SECRET=

